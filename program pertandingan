#include<iostream>
using namespace std;

int main(){
  char nama[30];
  int nilai_a, nilai_b, nilai_c, rata2, hadiah;
  cout << "NAMA : ";
  cin >> nama;
  cout << "nilai pertandingan 1 : ";
  cin >> nilai_a;
  cout << "nilai pertandingan 2 : ";
  cin >> nilai_b;
  cout << "nilai pertandingan 3 : ";
  cin >> nilai_c;
  cout << endl;

  rata2 = (nilai_a + nilai_b + nilai_c) / 3;
  cout << "siswa yang bernama " << nama << endl;
  cout << "memperoleh nilai rata rata " << rata2 << "dari hasil perlombaan yang diikutinya." << endl;
  if (rata2 >= 85 ){
    cout << "selamat mendapat hadiah computer core i5" << hadiah << endl;
    }else if (rata2 >= 70) {
    cout << "selamat mendapat hadiah uang sebesar Rp. 2.500,000" << hadiah << endl;
    }else if (rata2 < 70) {
    cout << "selamat mendapat hadiah hiburan" << hadiah << endl;
    }
}
